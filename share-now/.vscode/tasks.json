        },
        {
            "label": "Start backend",
            "type": "shell",
            "command": "npm run dev:teamsfx",
            "isBackground": true,
            "options": {
                "cwd": "${workspaceFolder}/api",
                "env": {
                    "PATH": "${workspaceFolder}/devTools/func:${env:PATH}"
                }
            },
            "windows": {
                "options": {
                    "env": {
                        "PATH": "${workspaceFolder}/devTools/func;${env:PATH}"
                    }
                }
            },
            "problemMatcher": {
                "pattern": {
                    "regexp": "^.*$",
                    "file": 0,
                    "location": 1,
                    "message": 2
